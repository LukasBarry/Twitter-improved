<p id="notice"><%= notice %></p>

<div class="container-fluid">
<%= render 'form' %>

<h1>Twattling Your Twiddling Tweets</h1><br />

<div class="row">
  <% @tweets.each do |tweet| %>
  <div class="col-md-7">
    <div class="panel panel-default">
        <div class="panel-body">
          <strong><%= link_to tweet.user.name, tweet_path(tweet) %></strong> <%= tweet.user.username %> tweetled:<br />
          <h3><%= tweet.message %></h3>
        </div>
        <% if current_user.id == tweet.user.id %>
        <div class="panel-footer">
          <%= link_to 'Edit', edit_tweet_path(@tweets), class: "btn btn-primary" %> |
          <%= link_to 'Delete', tweet, class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
