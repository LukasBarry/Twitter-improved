<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-body">
        <strong><%= @tweet.user.name %></strong> <%= @tweet.user.username %> tweetled:<br />
        <h3><%= @tweet.message %></h3>
        <% if @tweet.avatar_file_name != nil %>
          <%= image_tag @tweet.avatar.url(:medium), class: "img-responsive" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% if current_user.id == @tweet.user.id %>
<%= link_to 'Edit', edit_tweet_path(@tweet), class: "btn btn-primary" %> |
<% end %>
<%= link_to 'Back', tweets_path, class: "btn btn-primary" %>
